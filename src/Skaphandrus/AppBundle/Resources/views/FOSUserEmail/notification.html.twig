{% extends 'SkaphandrusAppBundle:FOSUserEmail:_base_notification_template.html.twig' %}

{% block title %}
    Hi {{fos_user.name}},
{% endblock %}

{% block intro %}
    <p>Here's what's happening on Skaphandrus!</p>
{% endblock %}

{% block content %}
    {% for notification in notifications %}

        <div style="color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; border-bottom-width: 1px; border-bottom-color: #e7eaec; border-bottom-style: solid; padding-bottom: 15px; margin-top: 15px; overflow: hidden;">
            <a href="http://skaphandrus.com{{url_to_user(notification.userFrom)}}" style="color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; text-decoration: none; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; float: left !important; cursor: pointer; margin-right: 10px; background-color: transparent;">
                <img alt="image" src="{{ notification.userFrom.settings.getWebPath | imagine_filter('sk_thumbnail_outbound_130') }}" style="color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; page-break-inside: avoid; max-width: 100% !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; vertical-align: middle; border-radius: 50%; width: 38px; height: 38px; border: 0;">
            </a>
            <div style="color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; overflow: hidden; zoom: 1; width: auto; display: block; vertical-align: top; font-size: 12px;">
                <small style="font-size: 85%; color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; float: right !important;">{{notification.createdAt|time_diff}}</small>
                {#<strong style="font-weight: 700; color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box;">Janet Rosowski</strong> add 1 photo on <strong style="font-weight: 700; color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box;">Monica Smith</strong>. <br style="color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box;">#}
                {{ notification_message(notification,"en" )|replace({'/en/': 'http://skaphandrus.com/en/'})|raw }}
                <br/>
                <small style="font-size: 85%; color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box;">{{notification.createdAt|date("F jS \\a\\t g:ia")}}</small>

                {% if notification.photo %}
                    <div style="color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; margin: 10px 0;">
                        <a target="_blank" href="http://skaphandrus.com{{path('photo_no_slug', { 'id': notification.photo.id })}}" style="color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; text-decoration: none; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; cursor: pointer; background-color: transparent;"> 
                            <img alt="image" src="{{ notification.photo.getWebPath | imagine_filter('sk_widen_240') }}" style="color: #000 !important; text-shadow: none !important; -webkit-box-shadow: none !important; box-shadow: none !important; page-break-inside: avoid; max-width: 100% !important; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; vertical-align: middle; max-height: 180px; border-radius: 4px; overflow: hidden; margin-right: 10px; margin-bottom: 10px; border: 0;">
                        </a>
                    </div>
                {% endif %} 
            </div>
        </div>
    {% endfor %}

{% endblock %}

{% block action %}
    <a href="http://skaphandrus.com/en/notification_admin/" style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; width: 96%; box-sizing: border-box; font-size: 14px; color: #FFF; text-decoration: none; line-height: 2; font-weight: bold; text-align: center; cursor: pointer; display: inline-block; border-radius: 5px; text-transform: capitalize; background-color: #1ab394; margin: 0; padding: 0; border-color: #1ab394; border-style: solid; border-width: 5px 10px;">Show More</a>
    
    
    

    
{% endblock %}



















