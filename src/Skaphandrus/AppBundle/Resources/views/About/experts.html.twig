{% extends 'SkaphandrusAppBundle::content_layout.html.twig' %}

{% block page_title %}{{ "page.experts.meta_tag.title"|trans }}{% endblock %}
{% block page_description %}{{ "page.experts.meta_tag.descritption"|trans }}{% endblock %}
{% block page_keywords %}{% endblock %}

{% block hreflang %}
    <link rel="alternate" hreflang="pt" href="{{ app.request.getSchemeAndHttpHost() ~ path('index', {'locale': 'pt'}) }}" />
    <link rel="alternate" hreflang="en" href="{{ app.request.getSchemeAndHttpHost() ~ path('index', {'locale': 'en'}) }}" />
{% endblock %}

