{% block heading_breadcrumbs %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block body %}

    <div class="wrapper wrapper-content">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-content">
                            <h1>{{ "page.experts.h1.title"|trans }}</h1>
                            {{ "page.experts.title.descritption"|trans|raw }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                {% for u in user %}
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="contact-box center-version">

                            <a href="{{url_to_user(u)}}">
                                <img alt="{{ u.personal.name }}" class="img-circle" src="{{ u.settings.getWebPath | imagine_filter('sk_thumbnail_outbound_100') }}" />

                                <h3 class="m-b-xs"><strong>{{u}}</strong></h3>
                                <div class="font-bold">{{ u.personal.honorific }}</div>
                                <div class="m-t-md">
                                    {{ "page.experts.p.species_validated"|trans }} <strong>{{ u.speciesInUser }}</strong><br/>
                                    {{ "page.experts.p.photos_validated"|trans }} <strong>{{ u.photosValidated|length }}</strong>
                                </div>
                            </a>

                            <div class="contact-box-footer">
                                <div class="m-t-xs btn-group">
                                    <a class="btn btn-xs btn-white" href="{{ path('person_admin_new') }}"><i class="fa fa-group"></i>  {{"page.user.label.add_contact"|trans}}</a>
                                    <a class="btn btn-xs btn-white" href="{{ url('fos_message_thread_new' )}}"><i class="fa fa-envelope"></i> {{"page.user.label.send_message"|trans}}</a>
                                </div>
                            </div>

                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-content">
                            <h3>{{ "page.experts.h3.contact_title"|trans }}</h3>
                            {{ "page.experts.p.contact_description"|trans|raw }}
                        </div>
                    </div>
                </div>
            </div>

        </div>       
    </div>

{% endblock %}

