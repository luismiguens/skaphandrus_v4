{% block heading_breadcrumbs %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block body %}

    <div class="wrapper wrapper-content">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-content">
                            <h1>{{ "page.points.h1.title"|trans }}</h1>
                            {{ "page.points.title.descritption"|trans|raw }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-content">

                            <table class="table table-striped" >
                                <thead>
                                    <tr>
                                        <th style="width:40%">{{ "form.points.label.name"|trans }}</th>
                                        <th style="width:40%">{{ "form.points.label.point_description"|trans }}</th>
                                        <th style="width:20%">{{ "form.points.label.single"|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for point in points %}
                                        <tr>
                                            <td>{{ point|trans|raw }}</td>
                                            <td>{{ ("page.points.label.point_description_"~point.id)|trans|raw }}</td>
                                            <td>{{ arr[point.id].single|trans }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>       
    </div>

{% endblock %}

