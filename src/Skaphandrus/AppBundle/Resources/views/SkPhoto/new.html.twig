{% extends 'SkaphandrusAppBundle::form_layout.html.twig' %}

{% form_theme form 'SkaphandrusAppBundle:Form:rows.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/skaphandrusapp/js/jquery-ui-1.10.4.min.js') }}"></script>
    <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-jqueryui.js') }}"></script>
    <script src="{{ asset('bundles/skaphandrusapp/js/skaphandrus.js') }}"></script>
{% endblock %}


{% block form_title %}
    {{ "forms.photo.title"|trans }}
{% endblock %}


{% block form_breadcrumbs %}
    <ol class="breadcrumb">
        <li><a href="index.html">{{ "forms.breadcrumbs.dashboard"|trans }}</a></li>
        <li><a href="index.html">{{ "forms.breadcrumbs.photos"|trans }}</a></li>
        <li class="active"><strong>{{ "forms.breadcrumbs.add_photo"|trans }}</strong></li>
    </ol>
{% endblock %}

{% block form_title_action %}
    {{ "forms.photo.btn.add"|trans }}
{% endblock %}

{% block form_title_description %}
      {{ "forms.photo.title.description"|trans }}
{% endblock %}


{% block body %}
    <form method="get" class="form-horizontal">
    {{ form(form) }}
    </form>
{% endblock %}
