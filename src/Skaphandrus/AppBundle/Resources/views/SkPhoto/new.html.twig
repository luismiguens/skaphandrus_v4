{% extends 'SkaphandrusAppBundle::form_layout.html.twig' %}

{% form_theme form 'SkaphandrusAppBundle:Form:rows.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/skaphandrusapp/js/jquery-ui-1.10.4.min.js') }}"></script>
    <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-jqueryui.js') }}"></script>
    <script src="{{ asset('bundles/skaphandrusapp/js/skaphandrus.js') }}"></script>
{% endblock %}


{% block form_title %}
    {{ "form.photo.h1.title"|trans }}
{% endblock %}


{% block form_breadcrumbs %}
    <ol class="breadcrumb">
        <li><a href="index.html">{{ "breadcrumb.dashboard"|trans }}</a></li>
        <li><a href="index.html">{{ "breadcrumb.photos"|trans }}</a></li>
        <li class="active"><strong>{{ "breadcrumb.add_photo"|trans }}</strong></li>
    </ol>
{% endblock %}

{% block form_title_action %}
    {{ "form.photo.btn.add"|trans }}
{% endblock %}

{% block form_title_description %}
    {{ "form.photo.text.description"|trans }}
{% endblock %}


{% block body %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_widget(form) }}
    {% include 'SkaphandrusAppBundle:Common:form-group-actions.html.twig' with {'admin_route':'photo_admin', 'is_new':true} %}
    {{ form_end(form) }}
{% endblock %}
