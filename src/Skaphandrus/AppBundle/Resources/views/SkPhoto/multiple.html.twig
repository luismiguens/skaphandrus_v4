{% extends 'SkaphandrusAppBundle::form_layout.html.twig' %}

{% form_theme form 'SkaphandrusAppBundle:Form:rows.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <!-- Dropzone -->
    <script src="{{ asset('bundles/skaphandrusapp/js/plugins/dropzone/dropzone.js') }}"></script>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Dropzone -->
    <link href="{{ asset('bundles/skaphandrusapp/css/plugins/dropzone/basic.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/skaphandrusapp/css/plugins/dropzone/dropzone.css')}}" rel="stylesheet">

{% endblock %}

{% block heading_title %}
    {{ "form.photo_multiple.h1.title"|trans }}
{% endblock %}

{% block heading_breadcrumbs %}
    <ol class="breadcrumb">
        <li><a href="{{ url_to_dashboard() }}">{{ "breadcrumb.dashboard"|trans }}</a></li>
        <li><a href="{{ path('photo_admin') }}">{{ "breadcrumb.photos"|trans }}</a></li>
        <li class="active"><strong>{{ "breadcrumb.add_photo_multiple"|trans }}</strong></li>
    </ol>
{% endblock %}

{#{% block heading_action %}
    <a href="{{ path('photo_admin_new') }}" class="btn btn-primary">{{ "form.photo.btn.add"|trans }}</a>
{% endblock %}#}

{% block form_title_description %}
    {{ "form.photo_multiple.text.description"|trans }}
{% endblock %}


{% block body %}

    <p>{{ "form.photo_multiple.p.support_text"|trans }}</p>

    <form action="{{ oneup_uploader_endpoint('gallery') }}" class="dropzone" method="POST" >
    </form>

    <br/>
    <button onclick="location.href = '{{ path('photo_admin') }}';" type="button" class="btn btn-w-m btn-primary pull-right"><i class="fa fa-long-arrow-left"></i> {{ "form.photo_multiple.button.go_back"|trans }}</button>
    <br/>
    <br/>

{% endblock %}
