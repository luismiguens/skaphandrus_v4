{% extends 'SkaphandrusAppBundle::form_layout.html.twig' %}


{% block javascripts %}
    {{ parent() }}
    <!-- Data Tables -->
    <script src="{{ asset('bundles/skaphandrusapp/js/plugins/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('bundles/skaphandrusapp/js/plugins/dataTables/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/skaphandrusapp/js/plugins/dataTables/dataTables.responsive.js') }}"></script>
    <script src="{{ asset('bundles/skaphandrusapp/js/plugins/dataTables/dataTables.tableTools.min.js') }}"></script>
    <script src="{{ asset('bundles/skaphandrusapp/js/skaphandrus.js') }}"></script>
{% endblock %}


{% block styleshets %}
    {{ parent() }}
    <!-- Data Tables -->
    <link href="{{ asset('bundles/skaphandrusapp/css/plugins/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/skaphandrusapp/css/plugins/dataTables/dataTables.responsive.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/skaphandrusapp/css/plugins/dataTables/dataTables.tableTools.min.css') }}" rel="stylesheet">
{% endblock %}

{% block form_title %}
    {{ "forms.photo.title"|trans }}
{% endblock %}


{% block form_breadcrumbs %}
    <ol class="breadcrumb">
        <li><a href="index.html">{{ "forms.breadcrumbs.dashboard"|trans }}</a></li>
        <li class="active"><strong>{{ "forms.breadcrumbs.photos"|trans }}</strong></li>
    </ol>
{% endblock %}

{% block form_title_action %}
    {{ "forms.photo.btn.add"|trans }}
{% endblock %}

{% block form_title_description %}
    {{ "forms.photo.title.description"|trans }}
{% endblock %}



{% block body -%}

    <table class="table table-striped table-bordered table-hover dataTables-example">
        <thead>
            <tr>
                <th>{{ "forms.photo.label.title"|trans }}</th>
                <th>{{ "forms.photo.label.image"|trans }}</th>
                <th>{{ "forms.photo.label.views"|trans }}</th>
                <th>{{ "forms.photo.label.takenat"|trans }}</th>
                <th>{{ "forms.common.label.actions"|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('photo_admin_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                    <td>{{ entity.image }}</td>
                    <td>{{ entity.views }}</td>
                    <td>{% if entity.takenAt %}{{ entity.takenAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul class="">
                            <li>
                                <a class="btn btn-white btn-sm" href="{{ path('photo_admin_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i> {{ "forms.common.btn.show"|trans }}</a>
                            </li>
                            <li>
                                <a class="btn btn-white btn-sm" href="{{ path('photo_admin_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i> {{ "forms.common.btn.edit"|trans }}</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('photo_admin_new') }}">
               <i class="fa fa-pencil"></i>  {{ "forms.photo.btn.add"|trans }}
            </a>
        </li>
    </ul>


{% endblock %}
