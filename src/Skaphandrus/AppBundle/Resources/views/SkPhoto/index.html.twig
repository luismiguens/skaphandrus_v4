{% extends '::base.html.twig' %}

{% block body -%}
    <h1>SkPhoto list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Image</th>
                <th>Description</th>
                <th>Views</th>
                <th>Takenat</th>
                <th>Createdat</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('photo_admin_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{{ entity.image }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.views }}</td>
                <td>{% if entity.takenAt %}{{ entity.takenAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('photo_admin_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('photo_admin_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('photo_admin_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
