{% extends 'SkaphandrusAppBundle::form_layout.html.twig' %}

{% form_theme edit_form 'SkaphandrusAppBundle:Form:rows.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/skaphandrusapp/js/jquery-ui-1.10.4.min.js') }}"></script>
     <script src="{{ asset('bundles/skaphandrusapp/js/hack/autocompleter-jqueryui.js') }}"></script>

{% endblock %}


{% block heading_title %}
    {{ "form.region.h1.title"|trans }}
{% endblock %}


{% block heading_breadcrumbs %}
    <ol class="breadcrumb">
        <li><a href="{{ url_to_dashboard() }}">{{ "breadcrumb.dashboard"|trans }}</a></li>
        <li><a href="{{ path('region_admin') }}">{{ "breadcrumb.region"|trans }}</a></li>
        <li class="active"><strong>{{ "breadcrumb.edit_region"|trans }}</strong></li>
    </ol>
{% endblock %}


{% block heading_action %}
    <a href="{{ path('region_admin_new') }}" class="btn btn-primary">{{ "form.region.btn.add"|trans }}</a>
{% endblock %}


{% block form_title_description %}
    {{ "form.region.text.description"|trans }}
{% endblock %}


{% block body %}
    
    {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal'} }) }}
    {#    {{ form_errors(edit_form) }}#}

    {{ form_widget(edit_form) }}

    {% include 'SkaphandrusAppBundle:Common:form-group-actions.html.twig' with {'admin_route':'region_admin', 'new_form':false} %}
    {{ form_end(edit_form) }}


    {{ form(delete_form) }}

{% endblock %}

