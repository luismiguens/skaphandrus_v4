<!-- FooTable -->
<script src="{{ asset('bundles/skaphandrusapp/js/plugins/footable/footable.all.min.js') }}"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.footable-locations').footable();
    });
</script>

{% if locations %}
    <input type="text" class="form-control input-sm m-b-xs" id="filter-locations" placeholder="Search in table">
    <table class="footable footable-locations table" data-page-size="25" data-filter=#filter-locations>
        <thead>
            <tr>
                <th>{{ "page.country.table.location"|trans }}</th>
                <th>{{ "page.country.table.num_photos"|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for l in locations %}
                <tr>
                    <td>{{ link_to_location(l) }}, {{l.region}}</td>
                    <td>
                        <a href="{{ path('photos', { 'location': l.id }) }}">
                            {{ l.photosInLocation }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    <ul class="pagination pull-right"></ul>
                </td>
            </tr>
        </tfoot>
    </table>

{% else %}
    {{"common.location.no_location"|trans}}
{% endif %}




