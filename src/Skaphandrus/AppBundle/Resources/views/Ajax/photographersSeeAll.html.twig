<!-- FooTable -->
<script src="{{ asset('bundles/skaphandrusapp/js/plugins/footable/footable.all.min.js') }}"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.footable-photographers').footable();
    });
</script>

{% if photographers %}
    <input type="text" class="form-control input-sm m-b-xs" id="filter-photographers" placeholder="Search in table">
    <table class="footable footable-photographers table" data-page-size="25" data-filter=#filter-photographers>
        <thead>
            <tr>
                <th>{{ "page.country.table.photographers"|trans }}</th>
                <th>{{ "page.country.table.num_photos"|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for p in photographers %}
                <tr>
                    <td>{{ link_to_user(p) }}</td>
                    <td>
                        <a href="{{ path('photos', { 'fosUser': p.id }) }}">
                            {{ p.photosInUser }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    <ul class="pagination pull-right"></ul>
                </td>
            </tr>
        </tfoot>
    </table>

{% else %}
    {{"common.photographers.no_photographers"|trans}}
{% endif %}




