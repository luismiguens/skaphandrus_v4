                                                            </a>

                                                            <a href="{{ url_to_user(award.winnerPhoto.fosUser) }}">
                                                                {{award.winnerPhoto.fosUser.name}}
                                                            </a>

                                                            {#<h5>{{award.winnerPhoto.fosUser.name}}</h5>#}
