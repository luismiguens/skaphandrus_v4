{% extends '@SkaphandrusAppBundle/Resources/views/content_layout.html.twig' %}

{% block body %}

    <h3>{{ "categories"|trans }}</h3>
    <ul>
        {% for cat in category.contest.categories %}
        <li>
            {% if cat.id == category.id %}
                {{ cat.translate(app.request.locale).name }}
            {% else %}
                <a href="{{ link_to_contest_photos(cat) }}">
                    {{ cat.translate(app.request.locale).name }}
                </a>
            {% endif %}
        </li>
        {% endfor %}
    </ul>

    <h2>{{ "photos"|trans }}: {{ category.translate(app.request.locale).name }}, {{ category.contest.name }}</h2>
    
    {% for photo in category.photo %}
        <p>{{ photo.title }} -> {{ photo.image }} ({{ "user"|trans }}: {{ photo.fosUser.username }})</p>
    {% endfor %}

{% endblock %}
