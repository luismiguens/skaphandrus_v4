        <li itemprop="itemListElement"><a href="{{ path('index') }}">{{ "breadcrumb.home"|trans }}</a></li>
        <li itemprop="itemListElement"><a href="{{ path('locations_home') }}">{{ "breadcrumb.locations"|trans }}</a></li>
