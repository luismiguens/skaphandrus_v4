{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>

    {#    <!-- Slick JQuery -->#}
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>

    <script src="{{ asset('bundles/skaphandrusapp/js/plugins/blueimp/jquery.blueimp-gallery.min.js') }}"></script>
    {#<!-- FooTable -->
    <script src="{{ asset('bundles/skaphandrusapp/js/plugins/footable/footable.all.min.js') }}"></script>#}
    
    <script type="text/javascript">

        $('.row .btn').on('click', function (e) {
            e.preventDefault();
            var $this = $(this);
            var $collapse = $this.closest('.collapse-group').find('.collapse');
            $collapse.collapse('toggle');
        });

        $(function () {
            var limit_spots = 3;
            var offset_spots = -3;
            var limit_species = 3;
            var offset_species = -3;
            var limit_photographers = 3;
            var offset_photographers = -3;

            var loadLocations = function () {
                $('#box_locations').fadeIn("slow");
                offset_spots = offset_spots + 3;
                setTimeout(function () {
                    $.ajax({
                        type: "get",
                        url: "{{path("ajax_location_country")}}",
                        data: 'country_id=' + {{ country.id }} +'&limit=' + limit_spots + '&offset=' + offset_spots,
                        dataType: "text",
                        success: function (response) {
                            $("#box_locations").append(response);
                        }
                    });
                }, 100);
            };
            $(this).ready(loadLocations);
            $('#show_more_locations').click(loadLocations);

            var loadSpecies = function () {
                $('#box_species').fadeIn("slow");
                offset_species = offset_species + 3;
                setTimeout(function () {
                    $.ajax({
                        type: "get",
                        url: "{{path("ajax_species_country")}}",
                        data: 'country_id=' + {{ country.id }} +'&limit=' + limit_species + '&offset=' + offset_species,
                        dataType: "text",
                        success: function (response) {
                            $("#box_species").append(response);
                        }
                    });
                }, 100);
            };
            $(this).ready(loadSpecies);
            $('#show_more_species').click(loadSpecies);

            var loadPhotographers = function () {
                $('#box_photographers').fadeIn("slow");
                offset_photographers = offset_photographers + 3;
                setTimeout(function () {
                    $.ajax({
                        type: "get",
                        url: "{{path("ajax_photographers_country")}}",
                        data: 'country_id=' + {{ country.id }} +'&limit=' + limit_photographers + '&offset=' + offset_photographers,
                        dataType: "text",
                        success: function (response) {
                            $("#box_photographers").append(response);
                        }
                    });
                }, 100);
            };
            $(this).ready(loadPhotographers);
            $('#show_more_photographers').click(loadPhotographers);

        });

        {#$(document).ready(function () {
            $('.footable-locations').footable();
            $('.footable-species').footable();
            $('.footable-photographers').footable();
        });#}

    </script>

{% endblock %}

{% block body %}

    <div class="wrapper wrapper-content animated" itemscope itemtype="http://schema.org/Country">

        <div class="row" >
            <div class="col col-lg-12" >
                <div class="ibox-title" >
                    <meta itemprop="isicV4" content="96590" />
                    <h1 itemprop="name">{% trans with {'%country%': country} %}page.country.h1.title{% endtrans %}</h1>
                </div>
                <div class="ibox-content" >
                    <h3>{% trans with {'%country%': country} %}page.country.h3.info{% endtrans %}</h3>
                    {% if country.translate(app.request.locale).overview is not empty %}
                        <p itemprop="description">{{ country.translate(app.request.locale).overview|raw  }}</p>

                        <div class="span4 collapse-group">
                            {% if country.translate(app.request.locale).geographyAndClimate is not empty %}
                                <h5 class="collapse">{{ "page.country.h5.geography_and_climate"|trans }}</h5>
                                <p class="collapse">{{ country.translate(app.request.locale).geographyAndClimate }}</p>
                            {% endif %}

                            {% if country.translate(app.request.locale).entryRequirements is not empty %}
                                <h5 class="collapse">{{ "page.country.h5.entry_requirements"|trans }}</h5>
                                <p class="collapse">{{ country.translate(app.request.locale).entryRequirements }}</p>
                            {% endif %}

                            {% if country.translate(app.request.locale).healthAndSafety is not empty %}
                                <h5 class="collapse">{{ "page.country.h5.health_and_safety"|trans }}</h5>
                                <p class="collapse">{{ country.translate(app.request.locale).healthAndSafety }}</p>
                            {% endif %}

                            {% if country.translate(app.request.locale).timeZone is not empty %}
                                <h5 class="collapse">{{ "page.country.h5.time_zone"|trans }}</h5>
                                <p class="collapse">{{ country.translate(app.request.locale).timeZone }}</p>
                            {% endif %}

                            {% if country.translate(app.request.locale).communications is not empty %}
                                <h5 class="collapse">{{ "page.country.h5.communications"|trans }}</h5>
                                <p class="collapse">{{ country.translate(app.request.locale).communications }}</p>
                            {% endif %}

                            {% if country.translate(app.request.locale).powerAndElectricity is not empty %}
                                <h5 class="collapse">{{ "page.country.h5.power_and_electricity"|trans }}</h5>
                                <p class="collapse">{{ country.translate(app.request.locale).powerAndElectricity }}</p>
                            {% endif %}

                            {% if country.translate(app.request.locale).otherInformations is not empty %}
                                <h5 class="collapse">{{ "page.country.h5.other_informations"|trans }}</h5>
                                <p class="collapse">{{ country.translate(app.request.locale).otherInformations }}</p>
                            {% endif %}

                            <a style="margin: 2% 0% 0% 25%; width: 50%; " class="btn btn-block btn-outline btn-primary showdetails" data-toggle="collapse" data-target="#viewdetails"></a>
                        </div>
                    {% else %}
                        {{ "page.country.p.no_description"|trans }}
                    {% endif %}
                </div>
            </div>
        </div>

