                                    </td>
                                    <td>
                                        {% if user.points is not empty %}
                                            {{ user.points }}
                                        {% else %}
                                            {{ 0 }}
                                        {% endif %}
                                    </td>
                                </tr>
                        {% endfor %}
                    </tbody>
                </table>#}
    </div>

{% endblock %}
