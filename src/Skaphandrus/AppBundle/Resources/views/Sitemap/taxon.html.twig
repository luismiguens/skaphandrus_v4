{# empty Twig template #}
<url>
    <loc>http://skaphandrus.com{{ path('taxon', {'node':taxon.taxonNodeName, 'slug':slugify(taxon.name), 'locale': 'en'}) }}</loc>
    <lastmod>{{ "now"|date("Y-m-d") }}</lastmod>  
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    <xhtml:link 
        rel="alternate"
        hreflang="en"
        href="http://skaphandrus.com{{ path('taxon', {'node':taxon.taxonNodeName, 'slug':slugify(taxon.name), 'locale': 'en'}) }}"
        />
    <xhtml:link 
        rel="alternate"
        hreflang="pt"
        href="http://skaphandrus.com{{ path('taxon', {'node':taxon.taxonNodeName|trans, 'slug':slugify(taxon.name), 'locale': 'pt'}) }}"
        />
</url>
