{# empty Twig template #}
{% if spot.name %} 
<url>
    <loc>http://skaphandrus.com{{ path('spot', {'country':slugify(spot.location.region.country), 'location':slugify(spot.location), 'slug':slugify(spot.name), 'locale': 'en'}) }}</loc>
    <lastmod>{{ "now"|date("Y-m-d") }}</lastmod>  
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    <xhtml:link 
        rel="alternate"
        hreflang="en"
        href="http://skaphandrus.com{{ path('spot', {'country':slugify(spot.location.region.country), 'location':slugify(spot.location), 'slug':slugify(spot.name), 'locale': 'en'}) }}"
        />
    <xhtml:link 
        rel="alternate"
        hreflang="pt"
        href="http://skaphandrus.com{{ path('spot', {'country':slugify(spot.location.region.country), 'location':slugify(spot.location), 'slug':slugify(spot.name), 'locale': 'pt'}) }}"
        />
</url>
{% endif %}
