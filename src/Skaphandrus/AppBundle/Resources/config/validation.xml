<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">
    
    <class name="Skaphandrus\AppBundle\Entity\FosUser">
        <property name="acquisitions">
            <constraint name="Skaphandrus\AppBundle\Validator\Constraints\ContainsSufficientPoints" />
        </property>
    </class>
    <class name="Skaphandrus\AppBundle\Entity\SkPhoto">
        <property name="imageFile">
            <constraint name="File">
                <option name="maxSize">10M</option>
                <option name="mimeTypes">
                    <value>image/jpeg</value>
                    <value>image/jpg</value>
                </option>
                <option name="maxSizeMessage">
                    Your file is too large. Maximum size is 5M.
                    O teu ficheiro é demasiado grande. O tamanho máximo permitido é 5M.
                </option>
                <option name="mimeTypesMessage">
                    The type of the file is invalid. Allowed types are "image/jpg" and "image/jpeg".
                </option>
            </constraint>
        </property>
    </class>
    
</constraint-mapping>