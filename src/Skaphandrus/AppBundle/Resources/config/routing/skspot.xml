<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="spot" path="/">
        <default key="_controller">SkaphandrusAppBundle:SkSpot:index</default>
    </route>

    <route id="spot_show" path="/{id}/show">
        <default key="_controller">SkaphandrusAppBundle:SkSpot:show</default>
    </route>

    <route id="spot_new" path="/new">
        <default key="_controller">SkaphandrusAppBundle:SkSpot:new</default>
    </route>

    <route id="spot_create" path="/create" methods="POST">
        <default key="_controller">SkaphandrusAppBundle:SkSpot:create</default>
    </route>

    <route id="spot_edit" path="/{id}/edit">
        <default key="_controller">SkaphandrusAppBundle:SkSpot:edit</default>
    </route>

    <route id="spot_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">SkaphandrusAppBundle:SkSpot:update</default>
    </route>

    <route id="spot_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">SkaphandrusAppBundle:SkSpot:delete</default>
    </route>

</routes>
