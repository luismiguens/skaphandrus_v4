{% extends '@SkaphandrusAppBundle/Resources/views/content_layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2 class="font-bold">{{ "resetting.request.h2.forgot_password"|trans }}</h2>
                <p>
                    Enter your email address and your password will be reset and emailed to you.
                </p>
                {% if invalid_username is defined %}
                    <div class="alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
                {% endif %}
                <div class="row">

                    <div class="col-lg-12">
                        <form class="fos_user_resetting_request m-t" role="form" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" id="username" name="username" placeholder="{{ 'resetting.request.username'|trans }}" required="required">
                            </div>

                            <input type="submit" class="btn btn-primary block full-width m-b" value="{{ 'resetting.request.submit'|trans }}" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6">
            Copyright Example Company
        </div>
        <div class="col-md-6 text-right">
           <small>Â© 2014-2015</small>
        </div>
    </div>
</div>


{% endblock %}
