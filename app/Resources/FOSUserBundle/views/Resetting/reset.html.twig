{% extends '@SkaphandrusAppBundle/Resources/views/auth_layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <h3>{{ "resetting.reset.h3.forgot_password"|trans }}</h3>
    <p>
        Enter new password.
    </p>
    {% if invalid_username is defined %}
        <div class="alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
    {% endif %}
    <form class="fos_user_resetting_reset m-t" role="form" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-primary block full-width m-b" value="{{ 'resetting.reset.submit'|trans }}" />
    </form>
{% endblock %}
